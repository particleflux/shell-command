{
    "name": "ptlis/shell-command",
    "description": "A basic wrapper around execution of shell commands.",
    "license": "MIT",
    "keywords": [ "shell", "exec", "command" ],
    "type": "library",
    "authors": [
        {
            "name": "brian ridley",
            "email":"ptlis@ptlis.net"
        }
    ],
    "require": {
        "php": ">=5.3.0"
    },
    "require-dev": {
        "pdepend/pdepend": "~1.1",
        "phploc/phploc": "~2.0",
        "phpmd/phpmd": "@dev",
        "phpunit/phpunit": "~4.0",
        "sebastian/phpcpd": "~2.0",
        "squizlabs/php_codesniffer": "~1.5"
    },
    "autoload": {
        "psr-4": {
            "ptlis\\ShellCommand\\": "src/",
            "ptlis\\ShellCommand\\Test\\": "tests/"
        }
    },
    "config": {
        "bin-dir": "bin"
    }
}
